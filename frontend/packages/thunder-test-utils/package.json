{
  "name": "@thunder/test-utils",
  "version": "0.0.0",
  "description": "Shared testing utilities for ⚡️ Thunder applications",
  "keywords": [
    "thunder",
    "testing",
    "vitest",
    "react",
    "testing-library",
    "wso2"
  ],
  "homepage": "https://github.com/asgardeo/thunder/tree/main/frontend/packages/thunder-test-utils#readme",
  "bugs": {
    "url": "https://github.com/asgardeo/thunder/issues"
  },
  "author": "WSO2",
  "license": "Apache-2.0",
  "type": "module",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/cjs/index.cjs"
    },
    "./setup": {
      "types": "./dist/setup.d.ts",
      "import": "./dist/setup.js",
      "require": "./dist/cjs/setup.cjs"
    },
    "./mocks": {
      "types": "./dist/mocks/index.d.ts",
      "import": "./dist/mocks/index.js",
      "require": "./dist/cjs/mocks/index.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/asgardeo/thunder",
    "directory": "frontend/packages/thunder-test-utils"
  },
  "scripts": {
    "build": "pnpm clean:dist && rolldown -c rolldown.config.js && tsc -p tsconfig.lib.json --emitDeclarationOnly --outDir dist",
    "clean": "pnpm clean:node_modules && pnpm clean:dist",
    "clean:dist": "rimraf dist",
    "clean:node_modules": "rimraf node_modules",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "typecheck": "tsc -p tsconfig.lib.json"
  },
  "dependencies": {
    "@testing-library/jest-dom": "catalog:",
    "@testing-library/react": "catalog:",
    "@testing-library/user-event": "catalog:",
    "tslib": "catalog:"
  },
  "devDependencies": {
    "@tanstack/react-query": "catalog:",
    "@thunder/shared-contexts": "workspace:^",
    "@thunder/eslint-plugin-thunder": "workspace:^",
    "@thunder/i18n": "workspace:^",
    "@thunder/logger": "workspace:^",
    "@thunder/prettier-config": "workspace:^",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@wso2/oxygen-ui": "catalog:",
    "eslint": "catalog:",
    "i18next": "catalog:",
    "prettier": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "react-i18next": "catalog:",
    "react-router": "catalog:",
    "rimraf": "catalog:",
    "rolldown": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "@tanstack/react-query": "catalog:",
    "@thunder/shared-contexts": "workspace:^",
    "@thunder/i18n": "workspace:^",
    "@thunder/logger": "workspace:^",
    "@wso2/oxygen-ui": "catalog:",
    "i18next": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "react-i18next": "catalog:",
    "react-router": "catalog:",
    "vitest": "catalog:"
  },
  "publishConfig": {
    "access": "public"
  }
}
