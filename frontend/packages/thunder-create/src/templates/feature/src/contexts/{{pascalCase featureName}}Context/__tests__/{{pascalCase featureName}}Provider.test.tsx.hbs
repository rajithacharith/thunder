import {describe, it, expect} from 'vitest';
import {render, screen} from '@testing-library/react';
import {{pascalCase featureName}}Provider from '../{{pascalCase featureName}}Provider';
import use{{pascalCase featureName}} from '../use{{pascalCase featureName}}';

describe('{{pascalCase featureName}}Provider', () => {
  it('should render children', () => {
    render(
      <{{pascalCase featureName}}Provider>
        <div data-testid="child">Test Child</div>
      </{{pascalCase featureName}}Provider>,
    );

    expect(screen.getByTestId('child')).toBeInTheDocument();
  });

  it('should provide context values', () => {
    const TestComponent = () => {
      const context = use{{pascalCase featureName}}();
      return (
        <div>
          <span data-testid="loading">\{String(context.isLoading)}</span>
          <span data-testid="error">\{context.error || 'null'}</span>
        </div>
      );
    };

    render(
      <{{pascalCase featureName}}Provider>
        <TestComponent />
      </{{pascalCase featureName}}Provider>,
    );

    expect(screen.getByTestId('loading')).toHaveTextContent('false');
    expect(screen.getByTestId('error')).toHaveTextContent('null');
  });
});
