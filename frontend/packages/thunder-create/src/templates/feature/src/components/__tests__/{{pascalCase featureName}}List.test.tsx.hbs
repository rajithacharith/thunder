import {render, screen, fireEvent, waitFor} from '@testing-library/react';
import {QueryClient, QueryClientProvider} from '@tanstack/react-query';
import {vi} from 'vitest';
import {ReactNode} from 'react';
import {{pascalCase featureName}}List from '../{{pascalCase featureName}}List';
import type Basic{{pascalCase featureName}} from '../../models/{{camelCase featureName}}';

// Mock react-router
const mockNavigate = vi.fn();
vi.mock('react-router', () => ({
  useNavigate: () => mockNavigate,
}));

// Mock react-i18next
vi.mock('react-i18next', () => ({
  useTranslation: () => ({
    t: (key: string) => {
      if (key === '{{camelCase featureName}}s:listing.columns.name') return 'Name';
      if (key === '{{camelCase featureName}}s:listing.columns.description') return 'Description';
      if (key === '{{camelCase featureName}}s:listing.columns.created') return 'Created';
      if (key === 'common:actions') return 'Actions';
      if (key === 'common:view') return 'View';
      if (key === 'common:delete') return 'Delete';
      if (key === '{{camelCase featureName}}s:listing.error.loadFailed') return 'Failed to load {{camelCase featureName}}s';
      return key;
    },
  }),
}));

// Mock logger
vi.mock('@thunder/logger/react', () => ({
  useLogger: () => ({
    info: vi.fn(),
    error: vi.fn(),
  }),
}));

// Mock useGet{{pascalCase featureName}}s
vi.mock('../api/useGet{{pascalCase featureName}}s');

const mock{{pascalCase featureName}}s: Basic{{pascalCase featureName}}[] = [
  {
    id: '{{kebabCase featureName}}-1',
    name: 'Test {{pascalCase featureName}} 1',
    description: 'First test {{camelCase featureName}}',
    createdAt: '2025-01-01T00:00:00Z',
  },
  {
    id: '{{kebabCase featureName}}-2',
    name: 'Test {{pascalCase featureName}} 2',
    description: 'Second test {{camelCase featureName}}',
    createdAt: '2025-01-02T00:00:00Z',
  },
];

describe('{{pascalCase featureName}}List', () => {
  let queryClient: QueryClient;
  let wrapper: ({children}: {children: ReactNode}) => JSX.Element;

  beforeEach(() => {
    queryClient = new QueryClient({
      defaultOptions: {
        queries: {
          retry: false,
        },
      },
    });
    wrapper = ({children}: {children: ReactNode}) => (
      <QueryClientProvider client=\{{queryClient}}>{children}</QueryClientProvider>
    );
    vi.clearAllMocks();
  });

  it('should render loading state', async () => {
    const {default: useGet{{pascalCase featureName}}s} = await import('../api/useGet{{pascalCase featureName}}s');

    vi.mocked(useGet{{pascalCase featureName}}s).mockReturnValue({
      data: undefined,
      isLoading: true,
      error: null,
    } as ReturnType<typeof useGet{{pascalCase featureName}}s>);

    render(<{{pascalCase featureName}}List />, {wrapper});

    // Check for loading indicator (DataGrid shows loading state)
    expect(screen.getByRole('progressbar')).toBeInTheDocument();
  });

  it('should render {{camelCase featureName}}s list', async () => {
    const {default: useGet{{pascalCase featureName}}s} = await import('../api/useGet{{pascalCase featureName}}s');

    vi.mocked(useGet{{pascalCase featureName}}s).mockReturnValue({
      data: {
        {{camelCase featureName}}s: mock{{pascalCase featureName}}s,
        totalCount: 2,
        limit: 10,
        offset: 0,
      },
      isLoading: false,
      error: null,
    } as ReturnType<typeof useGet{{pascalCase featureName}}s>);

    render(<{{pascalCase featureName}}List />, {wrapper});

    // Check for {{camelCase featureName}} names
    expect(screen.getByText('Test {{pascalCase featureName}} 1')).toBeInTheDocument();
    expect(screen.getByText('Test {{pascalCase featureName}} 2')).toBeInTheDocument();

    // Check for descriptions
    expect(screen.getByText('First test {{camelCase featureName}}')).toBeInTheDocument();
    expect(screen.getByText('Second test {{camelCase featureName}}')).toBeInTheDocument();
  });

  it('should render error state', async () => {
    const {default: useGet{{pascalCase featureName}}s} = await import('../api/useGet{{pascalCase featureName}}s');

    vi.mocked(useGet{{pascalCase featureName}}s).mockReturnValue({
      data: undefined,
      isLoading: false,
      error: new Error('Network error'),
    } as ReturnType<typeof useGet{{pascalCase featureName}}s>);

    render(<{{pascalCase featureName}}List />, {wrapper});

    expect(screen.getByText('Failed to load {{camelCase featureName}}s')).toBeInTheDocument();
  });

  it('should open actions menu on menu button click', async () => {
    const {default: useGet{{pascalCase featureName}}s} = await import('../api/useGet{{pascalCase featureName}}s');

    vi.mocked(useGet{{pascalCase featureName}}s).mockReturnValue({
      data: {
        {{camelCase featureName}}s: mock{{pascalCase featureName}}s,
        totalCount: 2,
        limit: 10,
        offset: 0,
      },
      isLoading: false,
      error: null,
    } as ReturnType<typeof useGet{{pascalCase featureName}}s>);

    render(<{{pascalCase featureName}}List />, {wrapper});

    // Find and click the first actions button
    const actionButtons = screen.getAllByRole('button', {name: /more/i});
    fireEvent.click(actionButtons[0]);

    // Check if menu items appear
    await waitFor(() => {
      expect(screen.getByText('View')).toBeInTheDocument();
      expect(screen.getByText('Delete')).toBeInTheDocument();
    });
  });

  it('should navigate to {{camelCase featureName}} detail on view action', async () => {
    const {default: useGet{{pascalCase featureName}}s} = await import('../api/useGet{{pascalCase featureName}}s');

    vi.mocked(useGet{{pascalCase featureName}}s).mockReturnValue({
      data: {
        {{camelCase featureName}}s: mock{{pascalCase featureName}}s,
        totalCount: 2,
        limit: 10,
        offset: 0,
      },
      isLoading: false,
      error: null,
    } as ReturnType<typeof useGet{{pascalCase featureName}}s>);

    render(<{{pascalCase featureName}}List />, {wrapper});

    // Open actions menu
    const actionButtons = screen.getAllByRole('button', {name: /more/i});
    fireEvent.click(actionButtons[0]);

    // Click view action
    await waitFor(() => {
      const viewButton = screen.getByText('View');
      fireEvent.click(viewButton);
    });

    expect(mockNavigate).toHaveBeenCalledWith('/{{kebabCase featureName}}s/{{kebabCase featureName}}-1');
  });

  it('should handle empty {{camelCase featureName}}s list', async () => {
    const {default: useGet{{pascalCase featureName}}s} = await import('../api/useGet{{pascalCase featureName}}s');

    vi.mocked(useGet{{pascalCase featureName}}s).mockReturnValue({
      data: {
        {{camelCase featureName}}s: [],
        totalCount: 0,
        limit: 10,
        offset: 0,
      },
      isLoading: false,
      error: null,
    } as ReturnType<typeof useGet{{pascalCase featureName}}s>);

    render(<{{pascalCase featureName}}List />, {wrapper});

    // DataGrid should still render but with no rows
    expect(screen.getByRole('grid')).toBeInTheDocument();
    expect(screen.queryByText('Test {{pascalCase featureName}} 1')).not.toBeInTheDocument();
  });
});
