import {renderHook, waitFor} from '@testing-library/react';
import {QueryClient, QueryClientProvider} from '@tanstack/react-query';
import {vi} from 'vitest';
import {ReactNode} from 'react';
import useGet{{pascalCase featureName}}s, {{pascalCase featureName}}sListResponse from '../useGet{{pascalCase featureName}}s';
import type Basic{{pascalCase featureName}} from '../../models/{{camelCase featureName}}';

// Mock dependencies
vi.mock('@asgardeo/react', () => ({
  useAsgardeo: () => ({
    http: {
      request: vi.fn(),
    },
  }),
}));

vi.mock('@thunder/shared-contexts', () => ({
  useConfig: () => ({
    getServerUrl: () => 'https://api.thunder.local',
  }),
}));

// Mock {{camelCase featureName}} data
const mock{{pascalCase featureName}}s: Basic{{pascalCase featureName}}[] = [
  {
    id: '{{kebabCase featureName}}-1',
    name: 'First {{pascalCase featureName}}',
    description: 'First test {{camelCase featureName}}',
    // Add more properties as needed
  },
  {
    id: '{{kebabCase featureName}}-2',
    name: 'Second {{pascalCase featureName}}',
    description: 'Second test {{camelCase featureName}}',
    // Add more properties as needed
  },
];

const mockResponse: {{pascalCase featureName}}sListResponse = {
  {{camelCase featureName}}s: mock{{pascalCase featureName}}s,
  totalCount: 2,
  limit: 10,
  offset: 0,
};

describe('useGet{{pascalCase featureName}}s', () => {
  let queryClient: QueryClient;
  let wrapper: ({children}: {children: ReactNode}) => JSX.Element;

  beforeEach(() => {
    queryClient = new QueryClient({
      defaultOptions: {
        queries: {
          retry: false,
        },
      },
    });
    wrapper = ({children}: {children: ReactNode}) => (
      <QueryClientProvider client=\{{queryClient}}>{children}</QueryClientProvider>
    );
  });

  afterEach(() => {
    vi.clearAllMocks();
    queryClient.clear();
  });

  it('should fetch {{camelCase featureName}}s successfully', async () => {
    const {useAsgardeo} = await import('@asgardeo/react');
    const mockHttp = useAsgardeo().http;

    (mockHttp.request as jest.Mock).mockResolvedValue({
      data: mockResponse,
    });

    const {result} = renderHook(() => useGet{{pascalCase featureName}}s(), {
      wrapper,
    });

    await waitFor(() => {
      expect(result.current.isSuccess).toBe(true);
    });

    expect(result.current.data).toEqual(mockResponse);
    expect(mockHttp.request).toHaveBeenCalledWith({
      url: 'https://api.thunder.local/{{kebabCase featureName}}s?limit=10&offset=0',
      method: 'GET',
      headers: {
        'Content-Type': 'application/json',
      },
    });
  });

  it('should fetch {{camelCase featureName}}s with custom parameters', async () => {
    const {useAsgardeo} = await import('@asgardeo/react');
    const mockHttp = useAsgardeo().http;

    (mockHttp.request as jest.Mock).mockResolvedValue({
      data: mockResponse,
    });

    const {result} = renderHook(
      () => useGet{{pascalCase featureName}}s({
        limit: 5,
        offset: 10,
        search: 'test-{{kebabCase featureName}}',
      }),
      {wrapper}
    );

    await waitFor(() => {
      expect(result.current.isSuccess).toBe(true);
    });

    expect(mockHttp.request).toHaveBeenCalledWith({
      url: 'https://api.thunder.local/{{kebabCase featureName}}s?limit=5&offset=10&search=test-{{kebabCase featureName}}',
      method: 'GET',
      headers: {
        'Content-Type': 'application/json',
      },
    });
  });

  it('should handle empty search parameter', async () => {
    const {useAsgardeo} = await import('@asgardeo/react');
    const mockHttp = useAsgardeo().http;

    (mockHttp.request as jest.Mock).mockResolvedValue({
      data: mockResponse,
    });

    const {result} = renderHook(
      () => useGet{{pascalCase featureName}}s({search: '  '}),
      {wrapper}
    );

    await waitFor(() => {
      expect(result.current.isSuccess).toBe(true);
    });

    // Should not include search parameter when empty or whitespace only
    expect(mockHttp.request).toHaveBeenCalledWith({
      url: 'https://api.thunder.local/{{kebabCase featureName}}s?limit=10&offset=0',
      method: 'GET',
      headers: {
        'Content-Type': 'application/json',
      },
    });
  });

  it('should handle request failure', async () => {
    const {useAsgardeo} = await import('@asgardeo/react');
    const mockHttp = useAsgardeo().http;

    (mockHttp.request as jest.Mock).mockRejectedValue(new Error('Network error'));

    const {result} = renderHook(() => useGet{{pascalCase featureName}}s(), {
      wrapper,
    });

    await waitFor(() => {
      expect(result.current.isError).toBe(true);
    });

    expect(result.current.error).toBeInstanceOf(Error);
  });

  it('should use correct query key', () => {
    const {result} = renderHook(
      () => useGet{{pascalCase featureName}}s({limit: 5, offset: 10, search: 'test'}),
      {wrapper}
    );

    // Query should be properly configured with the correct parameters
    expect(result.current.isIdle).toBe(false);
  });
});
