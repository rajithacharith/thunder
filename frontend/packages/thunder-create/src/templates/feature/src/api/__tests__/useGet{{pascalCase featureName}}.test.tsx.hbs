import {renderHook, waitFor} from '@testing-library/react';
import {QueryClient, QueryClientProvider} from '@tanstack/react-query';
import {vi} from 'vitest';
import {ReactNode} from 'react';
import useGet{{pascalCase featureName}} from '../useGet{{pascalCase featureName}}';
import type {{pascalCase featureName}} from '../../models/{{camelCase featureName}}';

// Mock dependencies
vi.mock('@asgardeo/react', () => ({
  useAsgardeo: () => ({
    http: {
      request: vi.fn(),
    },
  }),
}));

vi.mock('@thunder/shared-contexts', () => ({
  useConfig: () => ({
    getServerUrl: () => 'https://api.thunder.local',
  }),
}));

// Mock {{camelCase featureName}} data
const mock{{pascalCase featureName}}: {{pascalCase featureName}} = {
  id: 'test-{{kebabCase featureName}}-id',
  name: 'Test {{pascalCase featureName}}',
  description: 'A test {{camelCase featureName}}',
  // Add more properties as needed for your {{camelCase featureName}} model
};

describe('useGet{{pascalCase featureName}}', () => {
  let queryClient: QueryClient;
  let wrapper: ({children}: {children: ReactNode}) => JSX.Element;

  beforeEach(() => {
    queryClient = new QueryClient({
      defaultOptions: {
        queries: {
          retry: false,
        },
      },
    });
    wrapper = ({children}: {children: ReactNode}) => (
      <QueryClientProvider client=\{{queryClient}}>{children}</QueryClientProvider>
    );
  });

  afterEach(() => {
    vi.clearAllMocks();
    queryClient.clear();
  });

  it('should fetch {{camelCase featureName}} successfully', async () => {
    const {useAsgardeo} = await import('@asgardeo/react');
    const mockHttp = useAsgardeo().http;

    (mockHttp.request as jest.Mock).mockResolvedValue({
      data: mock{{pascalCase featureName}},
    });

    const {result} = renderHook(() => useGet{{pascalCase featureName}}('test-{{kebabCase featureName}}-id'), {
      wrapper,
    });

    await waitFor(() => {
      expect(result.current.isSuccess).toBe(true);
    });

    expect(result.current.data).toEqual(mock{{pascalCase featureName}});
    expect(mockHttp.request).toHaveBeenCalledWith({
      url: 'https://api.thunder.local/{{kebabCase featureName}}s/test-{{kebabCase featureName}}-id',
      method: 'GET',
      headers: {
        'Content-Type': 'application/json',
      },
    });
  });

  it('should handle request failure', async () => {
    const {useAsgardeo} = await import('@asgardeo/react');
    const mockHttp = useAsgardeo().http;

    (mockHttp.request as jest.Mock).mockRejectedValue(new Error('Network error'));

    const {result} = renderHook(() => useGet{{pascalCase featureName}}('test-{{kebabCase featureName}}-id'), {
      wrapper,
    });

    await waitFor(() => {
      expect(result.current.isError).toBe(true);
    });

    expect(result.current.error).toBeInstanceOf(Error);
  });

  it('should be disabled when no {{camelCase featureName}}Id is provided', () => {
    const {result} = renderHook(() => useGet{{pascalCase featureName}}(''), {
      wrapper,
    });

    expect(result.current.isIdle).toBe(true);
    expect(result.current.data).toBeUndefined();
  });

  it('should use correct query key', () => {
    const {result} = renderHook(() => useGet{{pascalCase featureName}}('test-{{kebabCase featureName}}-id'), {
      wrapper,
    });

    // The query should be properly configured with the {{camelCase featureName}} query key
    expect(result.current.isIdle).toBe(false);
  });
});
