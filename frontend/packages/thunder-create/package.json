{
  "name": "@thunder/create",
  "version": "0.0.0",
  "description": "CLI scaffolding tool for ⚡️ Thunder frontends",
  "keywords": [
    "thunder",
    "cli",
    "scaffolding",
    "generator",
    "template",
    "create",
    "wso2"
  ],
  "homepage": "https://github.com/asgardeo/thunder/tree/main/frontend/packages/thunder-create#readme",
  "bugs": {
    "url": "https://github.com/asgardeo/thunder/issues"
  },
  "author": "WSO2",
  "license": "Apache-2.0",
  "type": "module",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/cjs/index.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "bin": {
    "thunder-create": "./bin/thunder-create.js"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "bin",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/asgardeo/thunder",
    "directory": "frontend/packages/thunder-create"
  },
  "scripts": {
    "build": "pnpm clean:dist && rolldown -c rolldown.config.js && tsc -p tsconfig.lib.json --emitDeclarationOnly --outDir dist && cp -r src/templates dist/",
    "clean": "pnpm clean:node_modules && pnpm clean:dist",
    "clean:dist": "rimraf dist",
    "clean:node_modules": "rimraf node_modules",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "typecheck": "tsc -p tsconfig.lib.json"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "lodash-es": "catalog:",
    "@thunder/logger": "workspace:*",
    "commander": "^11.1.0",
    "handlebars": "^4.7.8",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@thunder/eslint-plugin-thunder": "workspace:*",
    "@thunder/prettier-config": "workspace:^",
    "@thunder/test-utils": "workspace:*",
    "@types/lodash-es": "catalog:",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "rimraf": "catalog:",
    "rolldown": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
